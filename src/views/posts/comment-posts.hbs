<div class="row">
    <div class="card">
        <div class="card-body">
            <form action="">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    {{post.title}}
                </div>
                <div class="form-group">
                    {{post.description}}
                </div>
                <div class="form-group">
                    {{post.date}}
                </div>
                <div class="form-group">
                    {{post.autor}}
                </div>
            </form>
        </div>
    </div>
</div>

<div class="card mt-2">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3>Comments</h3>
            <button class="btn btn-ingo" id="btn-toggle-comment">
                <i class="fa fa-comment-o"></i> Post a comment
            </button>
        </div>
        <div class="card-body">
            <blockquote>
                <form action="/posts/comment/{{_id}}" method="POST">
                    <div class="form-group mt-4">
                        <input type="text" class="form-control" name="name" placeholder="Name">
                    </div>
                    <div class="form-group mt-4">
                        <input type="text" class="form-control" name="email" placeholder="Email">
                    </div>
                    <div class="form-group mt-4">
                        <textarea name="comment" rows="2" class="form-control" placeholder="Your comment"></textarea>
                    </div>
                    <div class="form-group mt-4">
                        <button class="btn btn-success" id="btn-comment">
                            <i class="fa fa-comment"></i>Post
                        </button>
                    </div>
                </form>
            </blockquote>
            {{comment.name}}
            {{comment.email}}
            {{comment.comment}}
        </div>
    </div>