<div class="row">
    {{#each posts}}

    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title d-flex justify-content-between align-items-center">
                {{title}} <a href="posts/edit/{{_id}}"><i class="fas fa-edit"></i></a>
            </h4>
            <p>{{description}}</p>
            <p><strong>Date: {{date}}</strong></p>
            <p><strong>Autor:</strong>{{autor}}</p>
            <form action="/posts/delete/{{_id}}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn btn-danger btn-block btn-sm" type="submit">
                    Eliminar
                </button>
            </form>
            <button class="btn btn-success btn-block btn-sm mt-4" type="submit">
                <a href="/posts/comment/{{_id}}" style="text-decoration: none; color:white;">Leave a comment</a>
            </button>

            
        </div>
    </div>

    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h1>Hello</h1>
            <p clsss="lead">There are not Posts yet.</p>
            <a href="/posts/add" class="btn btn-success btn-block">Create One!</a>
        </div>
    </div>
    {{/each}}
</div>